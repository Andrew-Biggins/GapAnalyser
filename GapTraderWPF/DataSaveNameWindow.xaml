<Window x:Class="GapTraderWPF.DataSaveNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GapTraderWPF"
        xmlns:viewModels="clr-namespace:GapTraderCore.ViewModels;assembly=GapTraderCore"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance {x:Type viewModels:MarketDetailsViewModel}}"
        Title="Enter Data Name" Height="100" Width="475">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="30" Margin="10">
            <TextBlock Text="Name:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Height="20" Width="350" Text="{Binding SaveName}"/>
            <Button Width="30" Content="OK" Height="20" Margin="5,0" Command="{Binding ConfirmSaveNameCommand}" Click="ButtonBase_OnClick"/>
        </StackPanel>
    </Grid>
</Window>
